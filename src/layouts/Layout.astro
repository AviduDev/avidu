---
import Navbar from "../components/Navbar.astro";
import Action from "../components/Action.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />
    <!-- basic meta SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="web designer, front-end developer, website developer"
    />
    <meta name="robots" content="index,follow" />

    <!-- openGraph -->
    <meta property="og:title" content={title} />
    <meta property="og:site_name" content="Avidu" />
    <meta property="og:url" content="https://avidu.me" />
    <meta property="og:description" name="description" content={description} />
    <meta
      property="og:image"
      content="https://res.cloudinary.com/avidu/image/upload/v1696913589/E-commerce_store_design_by_avidu_sampath_bk3vnx.webp"
    />
    <meta property="og:type" content="website" />

    <!-- twitter -->
    <meta
      name="twitter:card"
      content="https://res.cloudinary.com/avidu/image/upload/v1696913589/E-commerce_store_design_by_avidu_sampath_bk3vnx.webp"
    />
    <meta name="twitter:site" content="Avidu" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:creator" content="Avidu" />

    <!-- JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Avidu",
        "alternateName": "Avidu Bandara",
        "url": "https://www.avidu.me/"
      }
    </script>
  </head>
  <body>
    <Navbar />
    <slot />
    <Action />
    <style is:global>
      /* ------restting------ */
      *,
      *::before,
      *::after {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      /* ------root styles------ */

      :root {
        /* font sizes */
        --h1: 2.5rem;
        --h2: 2rem;
        --h3: 1.5rem;
        --h4: 1.2rem;
        --h5: 1rem;
        --p: 1rem;
        --p-lg: 1.2rem;
        --p-sm: 0.8rem;

        /* font widths */
        --pw-1: 300px;
        --pw-2: 600px;
        --pw-3: 900px;

        /* spacing */
        --p-1: 0.5rem;
        --p-5: 5rem;

        /* colours */
        --orange: #fb5607;
        --beige: #f4f3ef;
        --yellow: #ffcc00;
      }

      /* ------classes------ */
      .pw-1 {
        width: var(--p-1);
      }

      .pw-2 {
        max-width: var(--p-2);
      }

      .pw-3 {
        max-width: var(--p-3);
      }

      /* ------element specific------ */

      html,
      body {
        font-family: Arial, Helvetica, sans-serif;
        overflow-x: hidden;
        scroll-behavior: smooth;
      }

      main {
        z-index: 100;
        background-color: #f4f3ef;
      }

      ::selection {
        background-color: #000000;
        color: rgb(255, 255, 255);
      }

      section {
        padding: 5rem 0.5rem 0.5rem 0.5rem;
        display: flex;
        flex-direction: column;
      }

      Image,
      img {
        max-width: 100%;
        display: block;
      }

      ul,
      li {
        margin: 0;
        padding: 0;
        list-style: none;
      }

      h1,
      h2,
      h3,
      h4 {
        text-transform: uppercase;
      }

      h1 {
        text-align: center;
      }

      a,
      ul,
      li {
        text-transform: capitalize;
      }

      p {
        text-align: justify;
      }

      a {
        color: inherit;
        /* text-decoration: none; */
      }

      /* ------spacing------ */
      /* main {
    padding: 0.5rem;
  } */

      body {
        background-color: #f4f3ef;
      }

      .p1 {
        padding: var(--p-1);
      }

      /* ------font sizes------ */
      h1 {
        font-size: var(--h1);
      }

      h2 {
        font-size: var(--h2);
      }

      h3 {
        font-size: var(--h3);
      }

      h4 {
        font-size: var(--h4);
      }

      h5 {
        font-size: var(--h5);
        text-transform: none;
      }

      p {
        font-size: var(--p);
      }

      a,
      li {
        font-size: var(--p);
      }
      /* ------global classes------ */

      .p-sm {
        font-size: var(--p-sm);
      }

      .p-lg {
        font-size: var(--p-lg);
      }

      /* ------colours------ */

      /* ------restting------ */
      /* ------restting------ */

      /* --------------------responsive design-------------------- */

      @media (min-width: 768px) {
        :root {
          --h1: 5rem;
          --h2: 4rem;
          --h3: 3rem;
          --h4: 2rem;
          --h5: 1rem;
          --p: 1rem;
          --p-lg: 1.2rem;
          --p-sm: 0.8rem;
        }

        p {
          max-width: 600px;
        }

        section {
          padding: 10rem 1rem 1rem 1rem;
        }
      }

      @media (min-width: 1024px) {
        :root {
          --h1: 7rem;
          --h2: 6rem;
          --h3: 4rem;
          --h4: 3rem;
          --h5: 1.25rem;
          --p: 1.25rem;
          --p-lg: 1.5rem;
          --p-sm: 1rem;
        }

        p {
          max-width: 600px;
        }

        section {
          padding: 12rem 1rem 1rem 1rem;
        }

        ul {
          max-width: 1920px;
          align-self: center;
          width: 100%;
        }
      }

      @media (min-width: 1440px) {
        :root {
          --h1: 10rem;
          --h2: 6rem;
          --h3: 4rem;
          --h4: 3rem;
          --h5: 1.5rem;
          --p: 1.25rem;
          --p-lg: 1.5rem;
          --p-sm: 1rem;
        }

        p {
          max-width: 600px;
        }

        section {
          padding: 20rem 1rem 1rem 1rem;
        }
      }

      @media (min-width: 2560px) {
        :root {
          --h1: 14rem;
          --h2: 8rem;
          --h3: 6rem;
          --h4: 4rem;
          --h5: 2rem;
          --p: 1.5rem;
          --p-lg: 2rem;
          --p-sm: 1.25rem;
        }

        p {
          max-width: 600px;
        }

        section {
          padding: 20rem 1rem 1rem 1rem;
        }
      }
    </style>
  </body><!-- --------------------Styles-------------------- -->
</html>
