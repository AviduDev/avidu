---
interface Props {
  number: number;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props;
---

<li>
  <h3>
    <span class="number">{number}</span>
    <span class="title">{title}</span>
  </h3>
  <p>{description}</p>
</li>

<style>
  li {
    border-top: 1px solid black;
  }

  h3 {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }
</style>
