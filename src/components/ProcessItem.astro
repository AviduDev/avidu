---
interface Props {
  number: number;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props;
---

<li class="card">
  <h3>
    <span class="number">{number + `.`}</span>
    <span class="title">{title}</span>
  </h3>
  <p>{description}</p>
</li>

<style>
  li {
    display: flex;
    flex-direction: column;
    border-top: 1px solid black;
    padding-bottom: 1rem;
    padding: 0.5rem;
    margin: 0.5rem;
  }

  h3 {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }

  p {
    align-self: flex-end;
    padding: 0.5rem 0 0.5rem 0;
    text-transform: none;
  }



  .card {
    position: sticky;
    top: 0;
  }

</style>
