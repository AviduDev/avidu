---
import { Image, imageConfig } from "astro:assets";

interface Props {
  company: string;
  year: number;
  category: string;
  liveUrl: string;
}

const { company, year, category, liveUrl, src, alt } = Astro.props;
---

<li>
  <div class="content">
    <h3>{company}</h3>
    <p>{year}</p>
    <ul class="tags">
      <li>{category}</li>
    </ul>
    <a href={liveUrl}>Live</a>
  </div>
  <div class="image"></div>
</li>

<style>
.tags {
    display: flex;
    flex-direction: column;
}

  li {
    border-top: solid black 1px;
  }
</style>
