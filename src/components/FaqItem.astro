---
interface Props {
  number: number;
  question: string;
  answer: string;
}

const { number, question, answer } = Astro.props;
---

<li>
  <h5>
    <span class="number">{number + `. `}</span>
    <span class="text">{question}</span>
  </h5>
  <p>{answer}</p>
</li>

<style>
  li {
    border-top: solid black 1px;
    padding-bottom: 1rem;
  }

  p {
    padding: 0.5rem 0 0.5rem 1rem;
  }
</style>
