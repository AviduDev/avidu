---
import Layout from "../../../layouts/Layout.astro";
import Title from "../../../components/Title.astro";

export async function getStaticPaths() {
  const response = await fetch(import.meta.env.HYGRAPH_ENDPOINT, {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
      Accept: "application/json",
    },
    body: JSON.stringify({
      query: `
        {
          websites {
            consider
            excerpt
            features
            idealFor
            slug
            technologies
            title
          }
        }
      `,
    }),
  });

  const websites = await response.json();

  const paths = websites.data.websites.map((website) => ({
    params: {
      slug: website.slug,
    },
    props: {
      website,
    },
  }));

  return paths;
}

const website = Astro.props.website;
---

<Layout title={website.title + ` | Avidu`} description={website.excerpt} image="">
  <main>
    <!-- top section -->
    <section class="top">
      <h1>{website.title}</h1>
      <p class="p-lg">
        {website.excerpt}
      </p>
    </section>

    <!-- consider section -->
    <section class="details">
      <Title big="Consider" small="" />
      <p class="p-lg">{website.consider}</p>

      <ul class="consider_item">
        {
          website.features.map((feature) => (
            <li class="feature_item">
              <span class="svg">
                <svg
                  viewBox="0 0 512 512"
                  version="1.1"
                  xmlns="http://www.w3.org/2000/svg"
                  xmlns:xlink="http://www.w3.org/1999/xlink"
                >
                  <title>arrow-down-right</title>
                  <g
                    id="Page-1"
                    stroke="none"
                    stroke-width="1"
                    fill="none"
                    fill-rule="evenodd"
                  >
                    <g
                      id="add"
                      fill="#000000"
                      transform="translate(106.666667, 64.000000)"
                    >
                      <polygon
                        id="Shape"
                        points="320 234.666667 192 362.666667 161.706667 332.373333 238.293333 256 -1.42108547e-14 256 -1.42108547e-14 0 42.6666667 0 42.6666667 213.333333 238.293333 213.333333 161.706667 136.96 192 106.666667"
                      />
                    </g>
                  </g>
                </svg>
              </span>
              {feature}
            </li>
          ))
        }
      </ul>
    </section>

    <!-- Ideal for -->
    <section class="ideal">
      <Title big="Ideal for" small="" />
      <ul>
        {website.idealFor.map((ideal) => <li>{ideal}</li>)}
      </ul>
    </section>

    <!-- Technologies -->
    <section class="technologies">
      <Title big="Technologies" small="" />
      <ul>
        {website.technologies.map((tech) => <li>{tech}</li>)}
      </ul>
    </section>
  </main>
</Layout>

<style>
  /* top */
  .top {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background-color: var(--orange);
  }

  .consider_item {
    align-self: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .consider_item li {
    max-width: 768px;
    padding: 0.5rem 0.5rem 3rem 0.5rem;
  }

  .details ul {
    padding-top: 3rem;
  }

  .feature_item {
    display: flex;
    flex-direction: row;
    width: 100%;
    border-top: 1px solid black;
    padding: 0.5rem 0 1rem 0;
  }

  .svg svg {
    width: 50px;
    height: 50px;
  }

  /* ideal for */

  .ideal ul {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .ideal li {
    border-top: 1px solid black;
    padding: 0.5rem 0.5rem 1rem 0.5rem;
  }

  /* technologies */

  .technologies ul {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .technologies li {
    border-top: 1px solid black;
    padding: 0.5rem 0.5rem 1rem 0.5rem;
  }
</style>
