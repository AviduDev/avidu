  </main>
</Layout>

<style>
  /* top */
  .top {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background-color: var(--orange);
  }

  ul {
    align-self: center;
    max-width: 768px;
  }

  .list_item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-top: 1px solid black;
    padding: 0.5rem 0.5rem 1rem 0.5rem;
  }

  .right {
    text-align: end;
  }

  /* bio */
  .bio ul {
    padding-top: 3rem;
  }

  /* education */
  .education ul {
    padding-top: 3rem;
  }

  /* experience */
  .experience ul {
    padding-top: 3rem;
  }

  /* skills */
  .skills ul {
    padding-top: 3rem;
  }

  /* skills */
  .questions ul {
    padding-top: 3rem;
  }
</style>
