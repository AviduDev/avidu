---
import FaqItem from "../../components/FaqItem.astro";
import Title from "../../components/Title.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="">
  <main>
    <!-- top -->
    <section class="top">
      <h1>About Myself</h1>
      <p class="p-lg">
        Hello there, I'm Avidu. Freelance web designer and front-end developer
        who working towards to turn ideas into digital realities. From a young age, my
        fascination with technology and design led me to the world of web
        development, where I found my passion and purpose.
      </p>
    </section>

    <!-- bio -->
    <section class="bio">
      <Title big="bio" small="" />

      <ul>
        <li class="list_item">
          <span class="left">First Name:</span>
          <span class="right">Avidu</span>
        </li>

        <li class="list_item">
          <span class="left">Last Name:</span>
          <span class="right">Bandara</span>
        </li>

        <li class="list_item">
          <span class="left">Date of Birth:</span>
          <span class="right">1997-12-30</span>
        </li>

        <li class="list_item">
          <span class="left">Gender:</span>
          <span class="right">Male</span>
        </li>

        <li class="list_item">
          <span class="left">Marital Status:</span>
          <span class="right">Unmarried</span>
        </li>

        <li class="list_item">
          <span class="left">Language:</span>
          <span class="right">English</span>
        </li>
      </ul>
    </section>

    <!-- education -->
    <section class="education">
      <Title big="Education" small="" />

      <ul>
        <li class="list_item">
          <span class="left">Full-stack developer Moratuwa open university</span
          >
          <span class="right">2023</span>
        </li>

        <li class="list_item">
          <span class="left"
            >Course in modern web development at LinkedIn learning</span
          >
          <span class="right">2023</span>
        </li>

        <li class="list_item">
          <span class="left"
            >Diploma in computer application from Sarvodaya</span
          >
          <span class="right">2019</span>
        </li>
      </ul>
    </section>

    <!-- experience -->
    <section class="experience">
      <Title big="Experience" small="" />

      <ul>
        <li class="list_item">
          <span class="left">Web developer at Craylux Media</span>
          <span class="right">2023</span>
        </li>

        <li class="list_item">
          <span class="left">Freelance Designer</span>
          <span class="right">2019</span>
        </li>
      </ul>
    </section>

    <!-- skills -->
    <section class="skills">
      <Title big="Skills - Weaknesses" small="" />

      <ul>
        <li class="list_item">
          <span class="left">Design skills:</span>
          <span class="right"
            >Figma, <br /> Adobe XD, <br /> Adobe Photoshop</span
          >
        </li>

        <li class="list_item">
          <span class="left">Development skills:</span>
          <span class="right"
            >HTML, <br /> CSS, <br /> Javascript, <br /> Astro, <br
            />Next.Js(Little)</span
          >
        </li>

        <li class="list_item">
          <span class="left">Soft skill:</span>
          <span class="right">Non-stop learning, <br /> Trying new things</span>
        </li>

        <li class="list_item">
          <span class="left">Weaknesses:</span>
          <span class="right">Verbal Communication</span>
        </li>
      </ul>
    </section>

