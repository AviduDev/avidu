---
import Title from "../../components/Title.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Contact Me | Avidu">
  <main>
    <section class="top">
      <h1>Reach Me</h1>

      <p class="p-lg">
        Hooray, you have reached the point! in the below contact form; add
        everything you want to do with your business or idea. business and what
        kind of website you needs and what features you need.
      </p>
    </section>

    <section class="image">
      <img
        src="https://res.cloudinary.com/avidu/image/upload/v1696829054/success_ykchq7.webp"
        alt="form submitted successfully"
      />
    </section>

    <!-- tally popup -->
    <section class="tally" id="tally">
      <iframe
        data-tally-src="https://tally.so/embed/wkG0rR?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
        loading="lazy"
        width="100%"
        height="869"
        frameborder="0"
        marginheight="0"
        marginwidth="0"
        title="Web Project
Intake Questionnaire "></iframe><script>
        var d = document,
          w = "https://tally.so/widgets/embed.js",
          v = function () {
            "undefined" != typeof Tally
              ? Tally.loadEmbeds()
              : d
                  .querySelectorAll("iframe[data-tally-src]:not([src])")
                  .forEach(function (e) {
                    e.src = e.dataset.tallySrc;
                  });
          };
        if ("undefined" != typeof Tally) v();
        else if (d.querySelector('script[src="' + w + '"]') == null) {
          var s = d.createElement("script");
          (s.src = w), (s.onload = v), (s.onerror = v), d.body.appendChild(s);
        }
      </script>
    </section>

    <!-- other contact details -->
    <section class="other_contact">
      <!-- details container -->
      <div class="details_container">
        <address>
          Santhanagama,
          <br />
           Kumbukgete,
          <br />
           Sri Lanka,
          <br />
           60508.
        </address>

        <ul>
          <li>
            <a href="http://">LinkedIn &#129125;</a>
          </li>

          <li>
            <a href="http://">Instagram &#129125;</a>
          </li>

          <li>
            <a href="http://">Behance &#129125;</a>
          </li>
        </ul>
      </div>

      <!-- phone number -->
      <a href="tel:+94767578127">
        <h2>+9476 75 78 127</h2>
      </a>

      <!-- chat links -->
      <ul class="bottom_links">
        <!-- whatsapp -->
        <li>
          <a aria-label="Chat on WhatsApp" href="https://wa.me/+94767578127">
            WhatsApp
          </a>
        </li>
        <!-- telegram -->
        <li>
          <a aria-label="Chat on Telegram" href="https://t.me/avidu97">
            Telegram</a
          >
        </li>
        <!-- slack -->
      </ul>
    </section>
  </main>

  <style>
    /* top */
    .top {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      min-height: 100vh;
      background-color: var(--orange);
    }

    /* form */
    form label {
      padding: 0.5rem 0.5rem 1rem 0.5rem;
    }

    form {
      display: flex;
      flex-direction: column;
    }

    label {
      display: flex;
      flex-direction: row;
      align-items: flex-end;
    }

    form input {
      background-color: transparent;
      border: none;
      border-bottom: 1px solid black;
      width: 100%;
      padding: 1rem;
    }

    form textarea {
      background-color: transparent;
      border: none;
      border-bottom: 1px solid black;
      width: 100%;
    }

    input:active,
    input:focus,
    input:focus-visible,
    input:focus-within {
      border: none;
      border-bottom: 1px solid black;
    }

    fieldset {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-start;
    }

    .types {
    }

    .form_group {
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
    }

    .details_container {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      width: 80%;
      padding: 1rem 0 1rem 0;
    }

    .other_contact {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .other_contact h2 {
      text-align: center;
    }

    .bottom_links {
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
    }

    .bottom_links li {
      padding: 0.5rem;
    }

    .form_dsc {
      padding: 0.5rem 0 1rem 0;
    }
  </style>
</Layout>
