  <style>
    /* top */
    .top {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      min-height: 100vh;
      background-color: var(--orange);
    }

    /* form */
    form label {
      padding: 0.5rem 0.5rem 1rem 0.5rem;
    }

    form {
      display: flex;
      flex-direction: column;
    }

    label {
      display: flex;
      flex-direction: row;
      align-items: flex-end;
    }

    form input {
      background-color: transparent;
      border: none;
      border-bottom: 1px solid black;
      width: 100%;
      padding: 1rem;
    }

    form textarea {
      background-color: transparent;
      border: none;
      border-bottom: 1px solid black;
      width: 100%;
    }

    input:active,
    input:focus,
    input:focus-visible,
    input:focus-within {
      border: none;
      border-bottom: 1px solid black;
    }

    fieldset {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-start;
    }

    .types {
    }

    .form_group {
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
    }

    .details_container {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      width: 80%;
    }

    .other_contact {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .other_contact h2 {
      text-align: center;
    }

    .bottom_links {
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
    }

    .bottom_links li {
      padding: 0.5rem;
    }

    .form_dsc {
      padding: 0.5rem 0 1rem 0;
    }
  </style>
</Layout>

