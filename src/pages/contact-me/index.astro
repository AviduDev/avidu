---
import Title from "../../components/Title.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout
  title="Contact Me | Avidu"
  description="Hooray, you have reached the point! in the below tally form; add
        everything related to your business or project. So I can get idea clear
        idea what and how you want your website to be."
  image="https://res.cloudinary.com/avidu/image/upload/v1696913589/E-commerce_store_design_by_avidu_sampath_bk3vnx.webp"
>
  <main>
    <section class="top">
      <h1>Reach Me</h1>

      <p class="p-lg">
        Hooray, you have reached the point! in the below tally form; add
        everything related to your business or project. So I can get idea clear
        idea what and how you want your website to be.
      </p>
    </section>

    <section class="image">
      <img
        src="https://res.cloudinary.com/avidu/image/upload/v1696829054/success_ykchq7.webp"
        alt="form submitted successfully"
      />
    </section>

    <!-- tally popup -->
    <section class="tally" id="tally">
      <iframe
        data-tally-src="https://tally.so/embed/wkG0rR?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
        loading="lazy"
        width="100%"
        height="869"
        frameborder="0"
        marginheight="0"
        marginwidth="0"
        title="Web Project
Intake Questionnaire "></iframe><script>
        var d = document,
          w = "https://tally.so/widgets/embed.js",
          v = function () {
            "undefined" != typeof Tally
              ? Tally.loadEmbeds()
              : d
                  .querySelectorAll("iframe[data-tally-src]:not([src])")
                  .forEach(function (e) {
                    e.src = e.dataset.tallySrc;
                  });
          };
        if ("undefined" != typeof Tally) v();
        else if (d.querySelector('script[src="' + w + '"]') == null) {
          var s = d.createElement("script");
          (s.src = w), (s.onload = v), (s.onerror = v), d.body.appendChild(s);
        }
      </script>
    </section>

    <!-- other contact details -->
    <section class="other_contact">
      <!-- phone number -->
      <a href="tel:+94767578127">
        <h2>+9476 75 78 127</h2>
      </a>
    </section>
  </main>

  <style>
    /* top */
    .top {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      min-height: 100vh;
      background-color: var(--orange);
    }

    .image img {
      max-width: 768px;
      align-self: center;
    }

    .other_contact {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .other_contact h2 {
      text-align: center;
      padding: 3rem 0 3rem 0;
    }

    .tally {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 100%;
    }

    .tally iframe {
      max-width: 900px;
    }
  </style>
</Layout>

<script async src="https://tally.so/widgets/embed.js"></script>
